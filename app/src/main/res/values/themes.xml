<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Herobot" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorSecondaryVariant">@color/darkGreen</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.Herobot.NoActionBar" parent="Theme.Herobot">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Herobot.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Herobot.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
