<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#45585859"
                android:centerColor="#2A2B2B2B"
                android:endColor="#00000000"
                android:angle="90"/>
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40B0B0B0"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
</layer-list>
