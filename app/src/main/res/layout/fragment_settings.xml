<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chatbg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/textview_bg"
        android:padding="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp">

        <TextView
            android:id="@+id/textGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/settings"
            android:textSize="20sp"
            android:textStyle="bold"/> <!-- Metin boyutunu 20sp olarak ayarladık -->

        <Switch
            android:id="@+id/languageSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textGallery"
            android:layout_centerHorizontal="true"
            android:text="@string/switch_language"
            android:textSize="17sp"
            android:textColor="#DBD1EF" /> <!-- Metin boyutunu 18sp olarak ayarladık -->

    </RelativeLayout>

</FrameLayout>
